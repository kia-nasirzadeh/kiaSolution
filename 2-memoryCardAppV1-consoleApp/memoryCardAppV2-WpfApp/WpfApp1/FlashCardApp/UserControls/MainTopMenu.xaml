<UserControl x:Class="WpfApp1.FlashCardApp.UserControls.MainTopMenu" Name="xbody"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.FlashCardApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3"
                   LastChildFill="False" Background="#ABB0B0">
            <Button DockPanel.Dock="Left" Content="table manager" x:Name="tableManagerBtn"
                    Padding="6" Margin="10"/>
            <Label DockPanel.Dock="Right" Name="todayDate"
                   Content="1234/12/3"
                   HorizontalContentAlignment="Center"
                   VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</UserControl>
